<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="sortListener"
            type="hr.fjjukic.template.app_common.interfaces.SortClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/ivSort"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:onClick="@{(v) -> sortListener.onSortClicked()}"
            android:src="@drawable/ic_sort_by"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.ActionMenuView
            android:id="@+id/amvSort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintStart_toStartOf="@id/ivSort"
            app:layout_constraintTop_toTopOf="@id/ivSort" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>